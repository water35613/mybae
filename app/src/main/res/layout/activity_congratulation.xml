<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Congratulation">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="恭喜完成健美計畫！"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/list_item"
        app:layout_constraintStart_toStartOf="@+id/list_item"
        />

    <ListView
        android:id="@+id/list_item"
        android:layout_width="240dp"
        android:layout_height="363dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_goneMarginLeft="26dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="127dp"
        android:layout_height="71dp"
        android:text="返回"
        app:layout_constraintTop_toBottomOf="@+id/list_item" />
</androidx.constraintlayout.widget.ConstraintLayout>